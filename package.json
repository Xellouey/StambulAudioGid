{
  "name": "dagestan-audio-guide",
  "version": "1.0.0",
  "description": "Audio guide application for Dagestan with mobile app and admin panel",
  "private": true,
  "workspaces": [
    "backend",
    "mobile",
    "admin-panel"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:backend && npm run install:mobile && npm run install:admin",
    "install:backend": "cd backend && npm install",
    "install:mobile": "cd mobile && npm install",
    "install:admin": "cd admin-panel && npm install",
    "dev:backend": "cd backend && npm run dev",
    "dev:admin": "cd admin-panel && npm run dev",
    "build:all": "npm run build:backend && npm run build:admin",
    "build:backend": "cd backend && npm run build",
    "build:admin": "cd admin-panel && npm run build",
    "lint": "npm run lint:backend && npm run lint:mobile && npm run lint:admin",
    "lint:backend": "cd backend && npm run lint",
    "lint:mobile": "cd mobile && npm run lint",
    "lint:admin": "cd admin-panel && npm run lint",
    "test": "npm run test:backend && npm run test:admin",
    "test:backend": "cd backend && npm run test",
    "test:admin": "cd admin-panel && npm run test"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.1.0"
  }
}